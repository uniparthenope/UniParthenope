<nsDrawer:RadSideDrawer id="sideDrawer"
                        xmlns:nsDrawer="nativescript-ui-sidedrawer"
                        xmlns:cb="@nstudio/nativescript-checkbox"
                        loaded="onLoaded">
    <nsDrawer:RadSideDrawer.drawerTransition>
        <nsDrawer:SlideInOnTopTransition/>
    </nsDrawer:RadSideDrawer.drawerTransition>

    <nsDrawer:RadSideDrawer.drawerContent>

        <GridLayout android:backgroundColor="rgba(0,0,0,0.4)" ios:class="reversed-two-color-gradient">
        <!--     Top Menu, foto e nome       -->
            <StackLayout orientation="vertical" verticalAlignment="top" height="80%" >
                <ios>
                    <StackLayout height="35%" orientation="vertical" verticalAlignment="top" marginTop="10">
                        <StackLayout class="imageTop" id="topImg" backgroundImage="~/images/logo_parth.png" horizontalAlignment="center" backgroundColor="#107dd0" width="120" height="120"/>
                        <Label id="topName" text="Benvenuto!" color="white" marginBottom="5" fontSize="18" horizontalAlignment="center"/>
                        <Label id="topEmail" text="EMAIL!" visibility="collapsed" textWrap="true" color="white" marginBottom="5" fontSize="12" horizontalAlignment="center" textAlignment="center"/>
                        <Label id="topMatr" text="MATR!" visibility="collapsed" textWrap="true" textAlignment="center" color="white" marginBottom="5" fontSize="14" horizontalAlignment="center"/>
                    </StackLayout>
                </ios>
                <android>
                    <StackLayout height="35%" orientation="vertical" verticalAlignment="top" marginTop="10">
                        <StackLayout class="imageTop" id="topImg" backgroundImage="~/images/logo_parth.png" horizontalAlignment="center" backgroundColor="#107dd0" width="110" height="110"/>
                        <Label id="topName" text="Benvenuto!" color="white" marginBottom="5" fontSize="18" horizontalAlignment="center"/>
                        <Label id="topEmail" text="EMAIL!" visibility="collapsed" textWrap="true" color="white" marginBottom="5" fontSize="12" horizontalAlignment="center" textAlignment="center"/>
                        <Label id="topMatr" text="MATR!" visibility="collapsed" textWrap="true" textAlignment="center" color="white" marginBottom="5" fontSize="14" horizontalAlignment="center"/>
                    </StackLayout>
                </android>

                <!--     Centrale       -->
                <ScrollView height="70%" >
                    <GridLayout>

                    <!--     Login       -->
                    <StackLayout id="loginForm" visibility="visible">
                        <TextField android:class="form-input" ios:class="ios-form-input" autocapitalizationType="none" hint="Username" id="username"/>
                        <TextField android:class="form-input" ios:class="ios-form-input" hint="Password" secure="true" id="password"/>
                        <cb:CheckBox checked="true" backgroundColor="#000000ff" text="Remember me" id="rememberMe" color="white" fillColor="white" marginTop="5" marginLeft="10"/>
                        <Button class="btn-menu" text="Login" marginBottom="5" marginTop="20" tap="onTapLogin"/>
                        <Label text="Dimenticato account?" color="white" textAlignment="center" horizontalAlignment="center" marginTop="10" ontap="ontap_account"/>

                    </StackLayout>

                    <!--     Studente       -->
                    <StackLayout id="userForm" visibility="collapsed">

                        <Button class="btn-menu" text="Home" marginBottom="5" marginTop="20" tap="goto_home"/>
                        <Button class="btn-menu" text="Accesso" marginBottom="5" marginTop="5" tap="goto_access"/>
                        <Button class="btn-menu" text="Anagrafica" marginBottom="5" marginTop="5" tap="goto_anagrafica"/>
                        <Button class="btn-menu" text="Badge" marginBottom="5" marginTop="5" tap="goto_badge"/>

                        <Button class="btn-menu" text="Tasse" marginBottom="5" marginTop="5" tap="goto_taxes"/>
                        <Button class="btn-menu" text="Libretto" marginBottom="5" marginTop="5" tap="goto_libretto"/>
                        <Button class="btn-menu" text="Corsi" marginBottom="5" marginTop="5" tap="goto_corsi"/>
                        <Button class="btn-menu" text="Appelli" marginBottom="5" marginTop="5" tap="goto_appelli"/>
                        <Button class="btn-menu" text="Professori" marginBottom="5" marginTop="5" tap="goto_docenti"/>

                        <!-- Disabled Buttons
                         <Button class="btn-menu" text="Tasse" marginBottom="5" marginTop="5" tap="goto_taxes"/>
                        <Button class="btn-menu" text="Scan Qr-Code" marginBottom="5" marginTop="5" tap=""/>
                           -->
                    </StackLayout>
                    <!--     Docente       -->

                    <StackLayout id="userDocente" visibility="collapsed">

                        <Button class="btn-menu" text="Home" marginBottom="5" marginTop="20" tap="goto_professor_home"/>
                        <Button class="btn-menu" text="Accesso" marginBottom="5" marginTop="5" tap="goto_access"/>
                        <Button class="btn-menu" text="Badge" marginBottom="5" marginTop="5" tap="goto_badge"/>
                        <Button class="btn-menu" text="Anagrafica" marginBottom="5" marginTop="5" tap="goto_anagrafica"/>


                        <!--Disabled Buttons
                        <Button class="btn-menu" text="Segreteria" marginBottom="5" marginTop="5" tap=""/>
                        <Button class="btn-menu" text="Anagrafe" marginBottom="5" marginTop="5" tap=""/>
                        <Button class="btn-menu" text="Ricevimento" marginBottom="5" marginTop="5" tap=""/>
                        <Button class="btn-menu" text="Professori" marginBottom="5" marginTop="5" tap=""/>
                        <Button class="btn-menu" text="Scan Qr-Code" marginBottom="5" marginTop="5" tap=""/>
                            -->
                    </StackLayout>
                    <!--     UserTecnico       -->
                    <StackLayout id="userRistoratore" visibility="collapsed">

                        <Button class="btn-menu" text="Miei Menu" marginBottom="5" marginTop="20" tap="goto_menuList"/>
                        <Button class="btn-menu" text="Nuovo Pasto" marginBottom="5" marginTop="20" tap="goto_menuNew"/>
                    </StackLayout>
                        <!--     Admin       -->
                        <StackLayout id="userAdmin" visibility="collapsed">
                            <Button class="btn-menu" text="Home" marginBottom="5" marginTop="20" tap="goto_adminHome"/>
                            <Button class="btn-menu" text="Accounts" marginBottom="5" marginTop="20" tap="goto_adminAccount"/>
                            <Button class="btn-menu" text="Nuovo Utente" marginBottom="5" marginTop="20" tap="goto_adminNew"/>
                        </StackLayout>
                    </GridLayout>

                </ScrollView>
            </StackLayout>


            <!--     Bottom Menu, about e settings       -->
            <StackLayout verticalAlignment="bottom" width="100%" height="20%" marginBottom="10" >
                <Button class="btn-menu" text="Settings" marginBottom="5" tap="goto_settings"/>
                <Button id="contatti" class="btn-menu" text="Contattaci" tap="contact_us" visibility="collapsed"/>

            </StackLayout>

            <StackLayout id="activityIndicator" visibility="collapsed" verticalAlignment="center" height="100%" width="100%" backgroundColor="rgba(0,0,0,0.5)">
                <Label text="Connessione..." horizontalAlignment="center" class="textPrimary"/>
                <ActivityIndicator horizontalAlignment="center" busy="true"/>
            </StackLayout>

        </GridLayout>
    </nsDrawer:RadSideDrawer.drawerContent>

    <nsDrawer:RadSideDrawer.mainContent>
        <Frame defaultPage="home/home-page"></Frame>
    </nsDrawer:RadSideDrawer.mainContent>
</nsDrawer:RadSideDrawer>

