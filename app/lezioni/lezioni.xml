<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:lv="nativescript-ui-listview"
      xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="#22384f" />
    <ActionBar class="action-bar" title="UniParthenope">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios:visibility="collapsed"
        />

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/logo_parth"
                    android:visibility="collapsed"
                    tap="onGeneralMenu"
                    ios.position="right">
        </ActionItem>
        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>

    </ActionBar>

    <GridLayout height="100%">
        <StackLayout height="100%">
            <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
                <Label class="textPrimary" text="Lezioni" horizontalAlignment="center" verticalAlignment="center"/>
            </GridLayout>
            <Label id="title" horizontalAlignment="center" fontSize="20" margin="5 5 5 5" text="Lezioni del 21/09/2020"/>
            <Label id="no_lession" visibility="collapsed" horizontalAlignment="center" verticalAlignment="center" margin="5 5 5 5" text="Nessuna lezione trovata!"/>


            <ScrollView verticalAlignment="top" margin="5 5 5 5" height="95%" borderRadius="15%" borderWidth="2">
                <ListView id="lezioni_listview" class="list-group" items="{{ lezioni }}" itemTap="onItemTap" margin="5 5 5 5">
                    <ListView.itemTemplate >
                        <GridLayout rows="*,*,*,*" height="100%">
                            <GridLayout row="0" columns="auto,*,auto" backgroundColor="#22384f" color="white" borderRadius="5%" padding="5 5 5 5">
                                <StackLayout col="0" orientation="vertical" horizontalAlignment="left">
                                    <Label class="{{ classe }}" color="white" borderWidth="0" fontSize="12" horizontalAlignment="center" text="Inizio" marginRight="5"/>
                                    <Label class="{{ classe }}" color="white" borderWidth="0" fontSize="16" text="{{ start }}"/>
                                </StackLayout>
                                <StackLayout col="1">
                                    <Label  borderWidth="0" text="{{ nome }}" horizontalAlignment="center" textWrap="true" textAlignment="center"/>

                                    <Label  borderWidth="0" fontSize="12" text="{{ prof }}" horizontalAlignment="center" textWrap="true" textAlignment="center"/>

                                </StackLayout>

                                <StackLayout col="2" orientation="vertical" horizontalAlignment="right">
                                    <Label class="{{ classe }}" color="white" borderWidth="0" fontSize="12" horizontalAlignment="center" text="Fine" marginRight="5"/>
                                    <Label class="{{ classe }}" color="white" borderWidth="0" fontSize="16" text="{{ end }}"/>
                                </StackLayout>
                            </GridLayout>

                            <StackLayout row="2" orientation="horizontal" horizontalAlignment="center">
                                <Label class="{{ classe }}" marginRight="10" borderWidth="0" fontSize="12" text="{{ room_place }}"/>
                                <Label class="{{ classe }}"  borderWidth="0" fontSize="12" text="{{ room }}"/>
                            </StackLayout>

                            <StackLayout row="3" orientation="vertical"  width="100%" >
                                <StackLayout orientation="vertical"  width="100%" >
                                </StackLayout>

                                <StackLayout orientation="horizontal" horizontalAlignment="center">
                                    <Progress maxValue="{{max_c}}" value="{{ava_c}}" width="70%" marginRight="10" verticalAlignment="center"/>
                                    <Label class="{{ classe }}"  borderWidth="0" fontSize="12" text="{{ availability }}" verticalAlignment="center"/>
                                    <Label class="{{ classe }}"  borderWidth="0" fontSize="12" text="{{ capacity }}" verticalAlignment="center"/>
                                </StackLayout>

                            </StackLayout>
                            <StackLayout row="1" horizontalAlignment="center" verticalAlignment="center" visibility="{{ pr }}">
                                <Label text="PRENOTATO" color="white" width="100%" backgroundColor="rgba(0,200,0,0.8)" verticalAlignment="center" horizontalAlignment="center" textWrap="true" textAlignment="center"/>
                            </StackLayout>
                        </GridLayout>
                    </ListView.itemTemplate>
                </ListView>
            </ScrollView>


        </StackLayout>

    </GridLayout>
</Page>
