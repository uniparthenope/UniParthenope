<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="#22384f" />
    <ActionBar class="action-bar" title="UniParthenope">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios:visibility="collapsed"
        />

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/logo_parth"
                    android:visibility="collapsed"
                    tap="onGeneralMenu"
                    ios.position="right">
        </ActionItem>
        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>

    </ActionBar>
    <StackLayout>
        <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
            <Label class="textPrimary" text="Info" horizontalAlignment="center" verticalAlignment="center"/>
        </GridLayout>


        <GridLayout height="80%">
            <Image src="~/images/logo_new.png" horizontalAlignment="center" verticalAlignment="center" margin="20 20 20 20" opacity="0.3"/>

            <StackLayout>
                <Label textAlignment="center" textWrap="true" text="app@uniparthenope" marginTop="10"/>
                <Image src="~/images/logoApp.png" width="125" height="125"/>

                <StackLayout orientation="horizontal" horizontalAlignment="center" verticalAlignment="center" marginTop="5">
                    <Label fontSize="14" id="version" text="Versione "/>
                </StackLayout>

                <StackLayout backgroundColor="#22384f" height="1" margin="20 30 20 30"/>

                <ScrollView verticalAlignment="center" horizontalAlignment="center" width="100%">
                    <StackLayout>
                        <StackLayout marginBottom="10" orientation="horizontal" horizontalAlignment="left" marginLeft="35">
                            <Image class="pic_rounded" src="~/images/team/team_leader.jpg" width="75" height="75" />

                            <StackLayout verticalAlignment="center" marginLeft="30">
                                <Label class="font-weight-bold" fontSize="18" textAlignment="left" textWrap="true" text="Raffaele Montella"/>
                                <Label textAlignment="left" fontSize="14" textWrap="true" text="Team leader" />
                            </StackLayout>
                        </StackLayout>
                        <StackLayout marginBottom="10" orientation="horizontal" horizontalAlignment="left" marginLeft="35">
                            <Image class="pic_rounded" src="~/images/team/gm.jpg" width="75" height="75" />

                            <StackLayout verticalAlignment="center" marginLeft="30">
                                <Label class="font-italic" fontSize="18" textAlignment="left" textWrap="true" text="Gennaro Mellone"/>
                                <Label textAlignment="left" fontSize="14" textWrap="true" text="Developer" />
                            </StackLayout>
                        </StackLayout>
                        <StackLayout marginBottom="10" orientation="horizontal" horizontalAlignment="left" marginLeft="35">
                            <Image class="pic_rounded" src="~/images/team/cgdv.png" width="75" height="75" />

                            <StackLayout verticalAlignment="center" marginLeft="30">
                                <Label class="font-italic" fontSize="18" textAlignment="left" textWrap="true" text="Ciro Giuseppe De Vita"/>
                                <Label textAlignment="left" fontSize="14" textWrap="true" text="Developer" />
                            </StackLayout>
                        </StackLayout>
                        <StackLayout marginBottom="10" orientation="horizontal" horizontalAlignment="left" marginLeft="35">
                            <Image class="pic_rounded" src="~/images/team/nn.jpg" width="75" height="75" />

                            <StackLayout verticalAlignment="center" marginLeft="30">
                                <Label class="font-italic" fontSize="18" textAlignment="left" textWrap="true" text="Nunzio Napolitano"/>
                                <Label textAlignment="left" fontSize="14" textWrap="true" text="Responsabile Mobile Store" />
                            </StackLayout>
                        </StackLayout>

                    </StackLayout>
                </ScrollView>

            </StackLayout>

        </GridLayout>
        <Button textWrap="true" text="Privacy" verticalAlignment="bottom" ontap="onTapPrivacy" class="btn" margin="10 5 0 5"/>

    </StackLayout>

</Page>
