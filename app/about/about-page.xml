<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="#22384f" />
    <ActionBar class="action-bar" title="UniParthenope">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios:visibility="collapsed"
        />

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/logo_parth"
                    android:visibility="collapsed"
                    tap="onGeneralMenu"
                    ios.position="right">
        </ActionItem>
        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>

    </ActionBar>
    <StackLayout>
        <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
            <Label class="textPrimary" text="Info" horizontalAlignment="center" verticalAlignment="center"/>
        </GridLayout>
        <ScrollView>
            <StackLayout>
                <Label textAlignment="center" textWrap="true" text="UniParthenope App" marginTop="10"/>
                <Image src="~/images/logo_parth.png" horizontalAlignment="center" margin="20 20 20 20"/>
                <StackLayout orientation="horizontal" horizontalAlignment="center" verticalAlignment="center" marginTop="5">
                    <Label id="version" text="Versione "/>
                </StackLayout>
                <Label textAlignment="center" textWrap="true" text="Team leader: Raffaele Montella" marginTop="10"/>
                <Label textAlignment="center" textWrap="true" text="Developers: Gennaro Mellone, Ciro Giuseppe De Vita" marginTop="5"/>
                <Label textAlignment="center" textWrap="true" text="Responsabile Mobile Store: Nunzio Napolitano" marginTop="5"/>
                <Label textAlignment="center" visibility="collapsed" textWrap="true" text="Prorettore alle Tecnologie Informatiche: Prof. Luigi Romano" marginTop="5"/>

                <Button textWrap="true" text="Copyright Â©" ontap="onTapCopy" class="blue_background_opac" margin="10 5 0 5"/>
                <Button textWrap="true" text="Disclaimer" ontap="onTapDisclaimer" class="blue_background_opac" margin="10 5 10 5"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>

</Page>
