<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="#009432" />
    <ActionBar class="action-bar">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios.position="right"/>

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>
        <Label class="action-bar-title" text="UniParthenope"></Label>
    </ActionBar>
    <GridLayout>
        <StackLayout orientation="vertical">
        <GridLayout class="two-color-gradient" width="100%" height="15%" verticalAlignment="top">
            <Label class="textPrimary" text="Appelli Disponibili" horizontalAlignment="center" verticalAlignment="top" marginTop="10"/>
            <Label class="textPrimary" id="sessione" horizontalAlignment="center" verticalAlignment="center"/>
            <Label class="textPrimary" id="aa" horizontalAlignment="center" verticalAlignment="bottom" marginBottom="10" fontSize="12"/>
        </GridLayout>
            <ScrollView verticalAlignment="center" height="76%" >
                <ListView id="appelli_listview" class="list-group" items="{{ items_appelli }}" itemTap="onTap" marginRight="5" marginLeft="5">
                    <ListView.itemTemplate >
                        <FlexboxLayout flexDirection="row">
                            <StackLayout orientation="vertical"  width="100%" marginBottom="5" marginTop="5">
                                <StackLayout orientation="horizontal" horizontalAlignment="center">
                                    <Label class="{{ classe }}" borderWidth="0" fontSize="16" text="{{ dataEsame }}"/>
                                </StackLayout>
                                <Label class="{{ classe }}" borderWidth="0" text="{{ esame }}" horizontalAlignment="center"/>
                                <Label class="{{ classe }}" borderWidth="0" fontSize="14" text="{{ docente }}" horizontalAlignment="center" marginBottom="10"/>
                                <Label class="{{ classe }}" borderWidth="0" fontSize="14" text="{{ descrizione }}" horizontalAlignment="center"/>
                                <Label class="{{ classe }}" color="gray" borderWidth="0" fontSize="12" text="{{ note }}" horizontalAlignment="center"/>

                                <StackLayout orientation="horizontal" horizontalAlignment="center">
                                    <StackLayout orientation="horizontal" horizontalAlignment="center">
                                        <Label class="{{ classe }}" color="gray" borderWidth="0" fontSize="12" text="Prenotazioni: da " />
                                        <Label class="{{ classe }}" color="gray" borderWidth="0" fontSize="12" text="{{ dataInizio }}"/>
                                        <Label class="{{ classe }}" color="gray" borderWidth="0" fontSize="12" text=" a " />
                                        <Label class="{{ classe }}" color="gray" borderWidth="0" fontSize="12" text="{{ dataFine }}"/>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout orientation="horizontal" horizontalAlignment="center">
                                    <Label class="{{ classe }}" color="gray" borderWidth="0" fontSize="12" text="Iscritti: "/>
                                    <Label class="{{ classe }}" color="gray" borderWidth="0" fontSize="12" text="{{ iscritti }}"/>
                                </StackLayout>
                            </StackLayout>
                        </FlexboxLayout>
                    </ListView.itemTemplate>
                </ListView>
            </ScrollView>

            <GridLayout backgroundColor="#5CC77A" height="10%" verticalAlignment="bottom" width="100%">
                <GridLayout columns="*, *, *, *, *" height="60">
                    <GridLayout id="selected_col" col="0" backgroundColor="#009432"/>
                    <GridLayout col="0" tap="tapCalendar">
                        <Image src="~/images/icon/calendar.png" height="23" width="23" />
                        <StackLayout>
                            <StackLayout class="badge" id="badge_Calendar">
                                <Label id=" text_badgeCalendar" class="badge-text" />
                            </StackLayout>
                        </StackLayout>
                    </GridLayout>
                    <GridLayout col="1" tap="tapCourses">
                        <Image src="~/images/icon/courses.png" height="23" width="23" />
                        <StackLayout>
                            <StackLayout class="badge" id="badge_Courses">
                                <Label id="text_badgeCourses" class="badge-text" />
                            </StackLayout>
                        </StackLayout>
                    </GridLayout>
                    <GridLayout col="2" tap="tapFood">
                        <Image src="~/images/icon/food.png" height="23" width="23" />
                        <StackLayout>
                            <StackLayout class="badge" id="badge_Food">
                                <Label id="text_badgeFood" class="badge-text" />
                            </StackLayout>
                        </StackLayout>
                    </GridLayout>
                    <GridLayout col="3" tap="tapBus">
                        <Image src="~/images/icon/front-bus.png" height="23" width="23" />
                        <StackLayout>
                            <StackLayout class="badge" id="badge_Bus">
                                <Label id="text_badgeBus" class="badge-text" />
                            </StackLayout>
                        </StackLayout>
                    </GridLayout>
                    <GridLayout col="4" tap="tapAlert">
                        <Image src="~/images/icon/alert.png" height="23" width="23" />
                        <StackLayout>
                            <StackLayout class="badge" id="badge_Alert" visibility="{{ badgeAlert }}">
                                <Label text="{{ text_badgeAlert }}" class="badge-text" />
                            </StackLayout>
                        </StackLayout>
                    </GridLayout>
                </GridLayout>
            </GridLayout>


        </StackLayout>

        <StackLayout id="activityIndicator" visibility="collapsed" verticalAlignment="center" height="100%" width="100%" backgroundColor="rgba(0,0,0,0.5)">
            <Label text="Recupero Esami..." horizontalAlignment="center" class="textPrimary"/>
            <ActivityIndicator horizontalAlignment="center" busy="true"/>
        </StackLayout>
    </GridLayout>
</Page>
