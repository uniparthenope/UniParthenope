<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:Barcode="nativescript-barcodescanner">

    <ActionBar class="action-bar" title="UniParthenope">

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <Image src="~/images/home/toptitle.png" android:width="200" class="action-image"/>


        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>

    </ActionBar>
    <GridLayout>
        <StackLayout>
        <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
            <Label class="textPrimary" text="Anagrafica" horizontalAlignment="center" verticalAlignment="center"/>
        </GridLayout>

        <GridLayout width="100%" verticalAlignment="top">
            <StackLayout id="back_image" class="main_image" verticalAlignment="center" horizontalAlignment="center" backgroundImage="" width="100%" height="50%"
                         opacity="0.5"/>

        </GridLayout>
        </StackLayout>


        <GridLayout margin="5,5,5,5" verticalAlignment="bottom"   height="90%">

            <Image  verticalAlignment="bottom" horizontalAlignment="center" src="~/images/logo_parth.png" height="350" width="350"
                    opacity="0.8"/>
            <StackLayout>

                <Image class="pic_rounded" id="my_img" verticalAlignment="top" horizontalAlignment="center" backgroundImage="~/images/logo_parth.png" height="175" width="175"
                       marginBottom="10" marginTop="10"/>

            <StackLayout id="info_panel" orientation="vertical"  height="75%" backgroundColor="rgba(34, 56, 79,0.9)" borderRadius="20">

                <StackLayout margin="5,5,5,5">
                    <StackLayout orientation="vertical"  width="100%" horizontalAlignment="center" marginBottom="10">
                        <Label id="depart" text="--" horizontalAlignment="center" textWrap="true" fontSize="14" color="white" textAlignment="center"/>
                    </StackLayout>
                    <StackLayout orientation="vertical" horizontalAlignment="center" marginBottom="15" width="100%">
                        <Label id="surname" text="SURNAME" horizontalAlignment="center" fontSize="28" color="white"/>
                        <Label id="name" text="NAME" horizontalAlignment="center" fontSize="18" color="white"/>
                    </StackLayout>
                    <GridLayout columns="*,auto,*" horizontalAlignment="center" width="100%" height="23%">
                        <StackLayout col="0" orientation="vertical" horizontalAlignment="left" marginLeft="15">
                            <Label id="mat_label" text="MATRICOLA" horizontalAlignment="center" fontSize="16" color="white"/>
                            <Label id="matricola" text="--" horizontalAlignment="center" fontSize="14" color="white"/>
                        </StackLayout>
                        <StackLayout col="1" orientation="vertical" horizontalAlignment="center" marginLeft="15">
                            <Label text="USERNAME" horizontalAlignment="center" fontSize="16" color="white"/>
                            <Label id="uid" text="--" horizontalAlignment="center" textWrap="true" fontSize="14" color="white"/>
                        </StackLayout>
                        <StackLayout col="2" orientation="vertical" horizontalAlignment="right" marginRight="15" >
                            <Label text="RUOLO" horizontalAlignment="center" fontSize="16" color="white"/>
                            <Label id="role"  text="--" horizontalAlignment="center" fontSize="14" color="white"/>
                            <Label id="roleID"  text="" horizontalAlignment="center" fontSize="14" color="white"/>
                        </StackLayout>
                    </GridLayout>
                    <GridLayout columns="auto,*,*" horizontalAlignment="center" width="100%" height="17%">
                        <StackLayout col="0" orientation="vertical" horizontalAlignment="left" marginLeft="15">
                            <Label text="DATA NASCITA" horizontalAlignment="center" fontSize="16" color="white"/>
                            <Label id="nascita" text="--" horizontalAlignment="center" fontSize="14" color="white"/>
                        </StackLayout>
                        <StackLayout col="1" orientation="vertical" horizontalAlignment="right" marginRight="15" width="50%" >
                            <Label text="TEL." horizontalAlignment="center" fontSize="16" color="white"/>
                            <Label id="tel"  text="--" horizontalAlignment="center" fontSize="14" color="white"/>
                        </StackLayout>

                        <StackLayout col="2" orientation="vertical" horizontalAlignment="right" marginRight="15" >
                            <Label text="SESSO" horizontalAlignment="center" fontSize="16" color="white"/>
                            <Label id="sex"  text="--" horizontalAlignment="center" fontSize="14" color="white"/>
                        </StackLayout>
                    </GridLayout>

                    <GridLayout  horizontalAlignment="center" width="100%" height="17%">
                        <StackLayout  orientation="vertical" horizontalAlignment="center" marginLeft="15">
                            <Label text="EMAIL IST." horizontalAlignment="center" fontSize="16" color="white"/>
                            <Label id="email_ist" text="--" horizontalAlignment="center" textWrap="true" fontSize="14" color="white"/>
                        </StackLayout>

                    </GridLayout>
                    <GridLayout columns="auto,*" horizontalAlignment="center" width="100%">

                        <GridLayout col="0" horizontalAlignment="center" width="100%" id="email_id" visibility="collapsed">
                            <StackLayout col="0" orientation="vertical" horizontalAlignment="center" marginLeft="15" width="70%">
                                <Label text="EMAIL PRIV." horizontalAlignment="center" fontSize="16" color="white"/>
                                <Label id="email" text="--" textWrap="true" horizontalAlignment="center" fontSize="14" color="white"/>
                            </StackLayout>
                        </GridLayout>
                        <GridLayout col="1" horizontalAlignment="center" width="100%" id="nation_id">
                            <StackLayout  orientation="vertical" horizontalAlignment="center" marginLeft="15">
                                <Label id="nazione" text="--" horizontalAlignment="center" fontSize="14" color="white"/>
                            </StackLayout>
                        </GridLayout>
                    </GridLayout>

                </StackLayout>

            </StackLayout>
            </StackLayout>


        </GridLayout>



    </GridLayout>
</Page>
