<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:x="nativescript-statusbar">

    <ActionBar class="action-bar" title="UniParthenope">

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <Image src="~/images/home/toptitle.png" android:width="200" class="action-image"/>


        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>

    </ActionBar>

    <GridLayout height="100%">
        <StackLayout height="100%">
            <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
                <Label class="textPrimary" text="Accesso" horizontalAlignment="center" verticalAlignment="center"/>
            </GridLayout>

            <GridLayout margin="5 5 5 5" columns="*,50" height="50" >
                <Label class="textPrimary" id="text_appello" col="0" text="Autocertificazione Obbligatoria" horizontalAlignment="left" verticalAlignment="center"/>
                <Switch col="1" id="switch_sondaggio" checked="true" loaded="onSwitchLoaded_autocert" horizontalAlignment="right" verticalAlignment="center"/>
            </GridLayout>

            <StackLayout margin="25 5 5 5" id="scelta_accesso" visibility="collapsed">
                <Label class="textMont_noborder" textWrap="true" text="Intendo frequentare i corsi del primo semestre dell'Anno Accademico 2020/2021:"/>
                <Label id="alert1" visibility="collapsed" textAlignment="center" textWrap="true" text="Attenzione: Non Ã¨ stato ancora scelto un metodo!" color="red" marginTop="5"/>
                <ListPicker id="listpicker" color="white" items="{{ status }}" selectedIndex="0" loaded="onListPickerLoaded"/>
            </StackLayout>


        </StackLayout>
        <StackLayout verticalAlignment="bottom">
            <Button margin="5 5 5 5" id="btn-prenotazioni" class="btn" visibility="collapsed" text="Prenotazione Aule" ontap="goto_prenotazioni" />
            <Button margin="5 5 5 5" id="btn-servizi" class="btn" visibility="collapsed" text="Prenotazione Servizi" ontap="goto_prenot_serv" />

        </StackLayout>


        <StackLayout id="activityIndicator" visibility="collapsed" verticalAlignment="center" height="100%" width="100%" backgroundColor="rgba(0,0,0,0.5)">
        <Label text="Recupero Accesso..." horizontalAlignment="center" class="textPrimary"/>
        <ActivityIndicator horizontalAlignment="center" busy="true"/>
    </StackLayout>
    </GridLayout>
</Page>
