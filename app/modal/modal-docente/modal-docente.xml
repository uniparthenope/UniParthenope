<Page xmlns="http://www.nativescript.org/tns.xsd"
      shownModally="onShownModally"
      xmlns:accordion="nativescript-accordion">

    <GridLayout android:height="75%" ios:height="100%">
        <GridLayout class="two-color-gradient" marginBottom="10" height="15%" verticalAlignment="top">
            <StackLayout verticalAlignment="center">
                <Label class="textPrimary" id="nome" textWrap="true" textAlignment="center" verticalAlignment="center" marginBottom="10"/>
                <Label class="textPrimary" id="ruolo" textWrap="true" fontSize="12" textAlignment="center" verticalAlignment="center"/>

            </StackLayout>
        </GridLayout>

        <GridLayout ios:height="70%" android:height="60%">
            <ScrollView heigth="70%">
                <GridLayout rows="auto,auto,auto,*,*,*,*" verticalAlignment="center" marginLeft="10" marginRight="10">
                    <StackLayout orientation="vertical" row="0" margin="5 5 5 5">
                        <Label class="textPrimary" color="white" id="" text="{{ L('office') }}" textWrap="true" textAlignment="center"/>
                        <Label class="textPrimary" color="orange" fontSize="14" text="--" horizontalAlignment="center" id="ufficio" ontap="" textWrap="true" textAlignment="center"/>
                    </StackLayout>
                    <StackLayout orientation="vertical" row="1" margin="5 5 5 5">
                        <Label class="textPrimary" color="white" id="" text="{{ L('phone') }}" textWrap="true" textAlignment="center"/>
                        <Label class="textPrimary" color="orange" fontSize="14" text="--" horizontalAlignment="center" id="telefono" ontap="ontap_phone" textWrap="true" textAlignment="center"/>
                    </StackLayout>
                    <StackLayout orientation="vertical" row="2" margin="5 5 5 5">
                        <Label class="textPrimary" color="white" id="" text="Email" textWrap="true" textAlignment="center"/>
                        <Label class="textPrimary" color="orange" fontSize="14" text="--" horizontalAlignment="center" id="email" ontap="ontap_email" textWrap="true" textAlignment="center"/>
                    </StackLayout>
                    <StackLayout orientation="vertical" row="3" margin="5 5 5 5">
                        <Label class="textPrimary" color="white" id="" text="{{ L('note') }}" textWrap="true" textAlignment="center"/>
                        <Label class="textPrimary" color="orange" fontSize="14" text="--" horizontalAlignment="center" id="note" textWrap="true" textAlignment="center"/>
                    </StackLayout>
                    <StackLayout orientation="vertical" row="4" margin="5 5 5 5">
                        <Label class="textPrimary" color="white" id="" text="{{ L('bio') }}" textWrap="true" textAlignment="center"/>
                        <Label class="textPrimary" color="orange" fontSize="12" text="--" horizontalAlignment="center" id="bio" textWrap="true" textAlignment="center"/>
                    </StackLayout>
                    <StackLayout orientation="vertical" row="5" margin="5 5 5 5">
                        <Label class="textPrimary" color="white" id="" text="{{ L('curr') }}" textWrap="true" textAlignment="center"/>
                        <Label class="textPrimary" color="orange" fontSize="12" text="--" horizontalAlignment="center" id="curr" textWrap="true" textAlignment="center"/>
                    </StackLayout>
                    <StackLayout orientation="vertical" row="6" margin="5 5 5 5">
                        <Label class="textPrimary" color="white" id="" text="{{ L('pubb') }}" textWrap="true" textAlignment="center"/>
                        <Label class="textPrimary" color="orange" editable="true" fontSize="12" text="--" horizontalAlignment="center" id="pub" textWrap="true" textAlignment="center"/>
                    </StackLayout>

                </GridLayout>

            </ScrollView>

        </GridLayout>

        <StackLayout verticalAlignment="bottom" marginTop="15">
            <Button class="btn" marginLeft="10" marginRight="10" text="{{ L('ricev') }}" ontap="ontap_ricevimento" backgroundColor="#22384f" color="white" borderColor="white" verticalAlignment="bottom" marginBottom="10"/>
            <Button class="btn" marginLeft="10" marginRight="10" text="{{ L('website') }}" ontap="ontap_scheda" backgroundColor="#22384f" color="white" borderColor="white" verticalAlignment="bottom" marginBottom="15"/>
        </StackLayout>
    </GridLayout>
</Page>
