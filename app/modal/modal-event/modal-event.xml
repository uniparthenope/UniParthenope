<Page xmlns="http://www.nativescript.org/tns.xsd"
      shownModally="onShownModally">

    <GridLayout rows="auto,*">
        <GridLayout row="0" class="two-color-gradient" columns="auto,*,auto" backgroundColor="#22384f" height="20%" verticalAlignment="top">
            <Label col="0" id="event_date_start" fontSize="12" color="white" marginLeft="10"/>
            <Label col="1" class="textPrimary-bold" id="event_text" text="title" textWrap="true" textAlignment="center" verticalAlignment="center" margin="5 5 5 5"/>
            <Label col="2" id="event_date_end" fontSize="12" marginRight="10" color="white"/>

        </GridLayout>

        <GridLayout row="1" verticalAlignment="center" margin="10 10 10 10">

            <Label class="textPrimary" id="event_body" text="title" textWrap="true" textAlignment="center" verticalAlignment="top" margin="5 5 5 5"/>

        </GridLayout>


    </GridLayout>
</Page>
